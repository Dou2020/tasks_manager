<div class="comments-list space-y-4 mb-6">
  <!-- Los comentarios se cargarán dinámicamente aquí -->
  <div class="text-gray-500 text-center py-8 bg-gray-50 rounded-lg border-2 border-dashed border-gray-200">
    <div class="flex flex-col items-center space-y-2">
      <div class="w-8 h-8 bg-emerald-100 rounded-full flex items-center justify-center">
        <i class="fas fa-spinner fa-spin text-emerald-600"></i>
      </div>
      <span class="text-sm font-medium">Cargando comentarios...</span>
    </div>
  </div>
</div>

<!-- Formulario para nuevo comentario -->
<div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
  <form id="comment-form" class="space-y-4">
    <div class="space-y-2">
      <label for="comment-content" class="block text-sm font-semibold text-gray-700">
        <i class="fas fa-pen text-emerald-600 mr-2"></i>
        Nuevo comentario
      </label>
      <textarea id="comment-content" 
                name="content" 
                rows="3" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200 bg-white resize-none" 
                placeholder="Comparte tu opinión, pregunta o actualización sobre esta tarea..."></textarea>
    </div>
    <div class="flex justify-between items-center">
      <div class="text-xs text-gray-500 flex items-center">
        <i class="fas fa-info-circle mr-1"></i>
        Los comentarios ayudan a mantener el equipo informado
      </div>
      <button type="submit" 
              class="bg-emerald-600 hover:bg-emerald-700 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 shadow-sm hover:shadow-md flex items-center space-x-2">
        <i class="fas fa-paper-plane"></i>
        <span>Enviar comentario</span>
      </button>
    </div>
  </form>
</div>

<!-- Template para comentarios individuales (se usa con JavaScript) -->
<template id="comment-template">
  <div class="comment-item bg-white rounded-lg border border-gray-200 p-4 hover:shadow-sm transition-shadow duration-200">
    <div class="flex items-start space-x-3">
      <!-- Avatar del usuario -->
      <img src="" alt="" class="comment-avatar w-8 h-8 rounded-full ring-2 ring-emerald-200 flex-shrink-0">
      
      <!-- Contenido del comentario -->
      <div class="flex-1 min-w-0">
        <div class="flex items-center space-x-2 mb-2">
          <h5 class="comment-author text-sm font-semibold text-gray-800"></h5>
          <span class="comment-date text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"></span>
        </div>
        <p class="comment-content text-sm text-gray-700 leading-relaxed"></p>
      </div>
      
      <!-- Botones de acción -->
      <div class="flex items-center space-x-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
        <button class="edit-comment text-gray-400 hover:text-emerald-600 p-1 rounded transition-colors duration-200" title="Editar comentario">
          <i class="fas fa-edit text-xs"></i>
        </button>
        <button class="delete-comment text-gray-400 hover:text-red-600 p-1 rounded transition-colors duration-200" title="Eliminar comentario">
          <i class="fas fa-trash text-xs"></i>
        </button>
      </div>
    </div>
  </div>
</template>

<!-- Estado vacío para cuando no hay comentarios -->
<template id="empty-comments-template">
  <div class="text-center py-8 bg-white rounded-lg border-2 border-dashed border-gray-200">
    <div class="flex flex-col items-center space-y-3">
      <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center">
        <i class="fas fa-comments text-emerald-600 text-lg"></i>
      </div>
      <div class="space-y-1">
        <h4 class="text-sm font-medium text-gray-800">No hay comentarios aún</h4>
        <p class="text-xs text-gray-500">Sé el primero en comentar sobre esta tarea</p>
      </div>
    </div>
  </div>
</template>