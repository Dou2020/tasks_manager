<div class="comments-list space-y-4 mb-4">
  <!-- Los comentarios se cargarán dinámicamente aquí -->
  <div class="text-gray-500 text-center py-2">Cargando comentarios...</div>
</div>

<form id="comment-form" class="border-t pt-4">
  <div class="mb-3">
    <label for="comment-content" class="block text-sm font-medium text-gray-700 mb-1">Nuevo comentario</label>
    <textarea id="comment-content" name="content" rows="2" class="w-full p-2 border rounded focus:ring-blue-500 focus:border-blue-500" placeholder="Escribe un comentario..."></textarea>
  </div>
  <div class="text-right">
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white text-sm py-1 px-3 rounded">
      Enviar comentario
    </button>
  </div>
</form>
