<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Proyectos | Task Manager</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
  <% const currentPage = 'projects'; %>
  <%- include('../partials/navbar', { user, currentPage }) %>

  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold">Mis Proyectos</h2>
      <button id="create-project-btn" class="inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
          <i class="fas fa-plus mr-2"></i>
          Crear Nuevo Proyecto
        </button>
    </div>

    <!-- Sección de proyectos propios -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h3 class="text-xl font-semibold mb-4">Proyectos que administro</h3>
      <div id="owned-projects" class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="animate-pulse flex flex-col p-4 border rounded-lg">
          <div class="h-6 bg-gray-200 rounded w-3/4 mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2 mb-2"></div>
          <div class="h-4 bg-gray-200 rounded w-full mb-4"></div>
          <div class="h-8 bg-gray-200 rounded w-1/4 mt-auto"></div>
        </div>
        <div class="animate-pulse flex flex-col p-4 border rounded-lg">
          <div class="h-6 bg-gray-200 rounded w-3/4 mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2 mb-2"></div>
          <div class="h-4 bg-gray-200 rounded w-full mb-4"></div>
          <div class="h-8 bg-gray-200 rounded w-1/4 mt-auto"></div>
        </div>
      </div>
    </div>

    <!-- Sección de proyectos donde soy miembro -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-semibold mb-4">Proyectos donde colaboro</h3>
      <div id="member-projects" class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="animate-pulse flex flex-col p-4 border rounded-lg">
          <div class="h-6 bg-gray-200 rounded w-3/4 mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2 mb-2"></div>
          <div class="h-4 bg-gray-200 rounded w-full mb-4"></div>
          <div class="h-8 bg-gray-200 rounded w-1/4 mt-auto"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Incluir modal para crear proyecto -->
  <%- include('../partials/project-modal') %>

  <!-- Script -->
  <script src="/js/dashboard.js"></script>
</body>
</html>
