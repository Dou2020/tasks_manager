<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
  <% const currentPage = 'dashboard'; %>
  <%- include('partials/navbar', { user, currentPage }) %>

  <div class="container mx-auto p-4">
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h2 class="text-2xl font-bold mb-4">Informaci√≥n del Usuario</h2>
      <% if (typeof error !== 'undefined') { %>
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4"><%= error %></div>
      <% } %>
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600">Nombre de Usuario:</p>
          <p class="font-semibold"><%= user.username %></p>
        </div>
        <div>
          <p class="text-gray-600">Nombre Completo:</p>
          <p class="font-semibold"><%= user.name %></p>
        </div>
        <div>
          <p class="text-gray-600">Email:</p>
          <p class="font-semibold"><%= user.email %></p>
        </div>
        <% if (user.first_name || user.last_name) { %>
          <div>
            <p class="text-gray-600">Nombre / Apellido:</p>
            <p class="font-semibold"><%= user.first_name || '' %> <%= user.last_name || '' %></p>
          </div>
        <% } %>
        <div>
          <p class="text-gray-600">Cuenta creada:</p>
          <p class="font-semibold"><%= new Date(user.createdAt).toLocaleDateString() %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Mis Proyectos Recientes</h2>
        <a href="/projects" class="text-blue-600 hover:underline">Ver todos</a>
      </div>
      <div id="recent-projects-container" class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="p-4 border rounded-lg bg-gray-50 flex items-center justify-center">
          <p class="text-gray-500">Cargando proyectos...</p>
        </div>
      </div>
      <div class="mt-4 text-center">
        <button id="create-project-btn" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded">
          Crear Nuevo Proyecto
        </button>
      </div>
    </div>
  </div>

  <!-- Incluir modal para crear proyecto -->
  <%- include('partials/project-modal') %>

  <!-- Script -->
  <script src="/js/dashboard.js"></script>
</body>
</html>